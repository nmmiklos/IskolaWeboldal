@model VBJWeboldal.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Bejelentkezés";
}

<div class="section">
    <div class="section-h">
        <h3>Bejelentkezés</h3>
        <p>Lépj be a szerkesztői felülethez</p>
    </div>

    <div style="max-width: 400px; margin: 0 auto; padding: 20px; background: var(--card); border-radius: 8px; box-shadow: var(--shadow); color: var(--text);">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" style="color: red; margin-bottom: 10px;"></div>

            <div style="margin-bottom: 15px;">
                <label asp-for="Email" style="font-weight: bold;"></label><br />
                <input asp-for="Email" style="width: 100%; padding: 10px; border: 1px solid var(--line); border-radius: 4px; background: var(--card); color: var(--text);" [cite_start] />
                <span asp-validation-for="Email" style="color: red; font-size: 0.85em;"></span>
            </div>

            <div style="margin-bottom: 15px;">
                <label asp-for="Password" style="font-weight: bold;">Jelszó</label><br />
                <input asp-for="Password" style="width: 100%; padding: 10px; border: 1px solid var(--line); border-radius: 4px; background: var(--card); color: var(--text);" [cite_start] />
                <span asp-validation-for="Password" style="color: red; font-size: 0.85em;"></span>
            </div>

            <button type="submit" class="btn" style="background: var(--accent); color:#2b240d; width: 100%;">Bejelentkezés</button>
        </form>
    </div>
</div>