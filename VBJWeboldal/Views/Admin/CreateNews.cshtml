@model VBJWeboldal.Models.News
@{
    Layout = "_AdminLayout";
    bool isEdit = Model.Id > 0; // Eldöntjük, hogy szerkesztünk-e, vagy létrehozunk egy új bejegyzést
    ViewData["Title"] = isEdit ? "Bejegyzés Szerkesztése" : "Új Bejegyzés";
}
<style>
    .card {
        max-width: 600px;
        margin: 0 auto;
    }

    

    .doc-attachment-box {
        background: var(--admin-bg); 
        padding: 15px;
        border-radius: 8px;
        border: 1px dashed var(--admin-border); 
        margin-top: 15px;
        margin-bottom: 15px;
    }

    .doc-attachment-label {
        color: var(--admin-primary); 
        font-weight: bold;
    }

    .doc-attachment-hint {
        font-size: 12px;
        color: var(--admin-text);
        opacity: 0.7; 
        margin-top: 5px;
        margin-bottom: 0;
    }

    .cancel-link {
        margin-left: 10px;
        color: var(--admin-text);
        opacity: 0.8;
        text-decoration: none;
    }

        .cancel-link:hover {
            opacity: 1;
            text-decoration: underline;
        }
</style>

<div class="card">
    <h2>@(isEdit ? "Bejegyzés Szerkesztése" : "Új bejegyzés létrehozása")</h2>

    <form asp-action="@(isEdit ? "EditNews" : "CreateNews")" method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CoverImagePath" />

        <label>Bejegyzés címe:</label>
        <input asp-for="Title" required />

        <label>Tartalom:</label>
        <textarea asp-for="Content" rows="6" required></textarea>

        <div class="doc-attachment-box">
            <label class="doc-attachment-label">📎 Kapcsolódó dokumentum linkje (Opcionális):</label>
            <input asp-for="AttachedDocumentUrl" class="form-control" placeholder="Illeszd be ide a vágólapra másolt linket..." style="margin-bottom: 0;" />
            <span asp-validation-for="AttachedDocumentUrl" style="color: #d9534f; font-size: 13px; font-weight: bold; display: block; margin-top: 5px;"></span>
            <p class="doc-attachment-hint">(Menj a Dokumentumok menübe, másold ki egy Publikus fájl linkjét, és illeszd be ide! Belső fájlt a rendszer nem enged csatolni.)</p>
        </div>

        <label>Státusz:</label>
        <select asp-for="IsPublished">
            <option value="true">Publikált (Megjelenik az oldalon)</option>
            <option value="false">Piszkozat (Csak adminok látják)</option>
        </select>

        <label>Borítókép (opcionális):</label>
        <input type="file" name="coverImage" accept="image/*" />

        @if (isEdit && !string.IsNullOrEmpty(Model.CoverImagePath))
        {
            <div style="margin-bottom: 15px;">
                <small>Jelenlegi kép:</small><br />
                <img src="@Model.CoverImagePath" alt="Jelenlegi borítókép" style="max-height: 100px; border-radius: 4px; margin-top: 5px;" />
            </div>
        }

        <button type="submit" class="btn btn-primary">Mentés</button>
        <a href="/Admin/Index" class="cancel-link">Mégse</a>
    </form>
</div>