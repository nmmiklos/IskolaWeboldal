<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Iskola Weboldal</title>

    <meta name="description" content="Iskola Weboldal" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="stage">
        <div class="frame" role="application" aria-label="Iskola Weboldal">


            <header class="nav">
                <div class="brand">
                    <div class="logo">

                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <path d="M12 3L2 8l10 5 10-5-10-5Z" stroke="rgba(255,255,255,.92)" stroke-width="2" />
                            <path d="M6 10v6c0 1.1 2.7 2 6 2s6-.9 6-2v-6" stroke="rgba(255,255,255,.92)" stroke-width="2" />
                            <path d="M22 10v6" stroke="rgba(255,255,255,.92)" stroke-width="2" />
                        </svg>
                    </div>
                    <div>
                        <h1>Iskola Weboldal</h1>
                        <div class="sub">Diákoknak, szülőknek, tanároknak</div>
                    </div>
                </div>

                <div class="navlinks">
                    <a asp-action="Index" asp-controller="Home">
                         Home 
                    </a>
                    <a asp-action="Index" asp-controller="Hirek">
                        Hírek
                    </a>
                    <a asp-action="Index" asp-controller="Events">
                        Események
                    </a>
                    <a asp-action="Index" asp-controller="Gallery">
                        Galéria
                    </a>
                    <a asp-action="Contact" asp-controller="Home">
                        Kapcsolat
                    </a>
                </div>

                <div class="nav-actions">
                    <button class="btn btn-ghost" id="themeToggle" aria-label="Dark mode"> 🌙 </button>
                    <div class="menu-wrap">
                        <button id="menuBtn" class="btn btn-ghost">
                            ☰ Menü
                        </button>

                        <div id="menuPanel" class="menu-panel">
                            <a asp-controller="Pages" asp-action="Schedule">📅 Órarend</a>
                            <a asp-controller="Pages" asp-action="Cafeteria">🍽 Menza</a>
                            <a asp-controller="Pages" asp-action="Documents">📄 Dokumentumok</a>
                        </div>
                    </div>
                    <a class="btn btn-primary" asp-controller="Account" asp-action="Login">
                        Bejelentkezés
                    </a>
                </div>
            </header>

            <main class="content">
                @RenderBody()
            </main>

            <footer class="footer">
                <div>© <span id="y"></span> Iskola Weboldal</div>
                <div>
                    <a href="#">Adatkezelés</a> •
                    <a href="#">Impresszum</a>
                </div>
            </footer>

        </div>
    </div>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
