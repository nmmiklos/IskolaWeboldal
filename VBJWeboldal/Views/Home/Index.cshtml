@model IEnumerable<VBJWeboldal.Models.News>

@{
    ViewData["Title"] = "Kezdőlap";
}

<section class="hero" aria-label="Kiemelt szakasz">
    <div class="hero-left">
        <span class="hero-kicker">Naprakész információk egy helyen</span>
        <h2>Üdvözlünk iskolánk weboldalán!</h2>
        <p>
            Fedezd fel a legfrissebb híreket, eseményeket, dokumentumokat és galériákat.
        </p>

        <div class="hero-cta">
            <button class="btn" style="background: var(--accent); color:#2b240d;">
                Legfrissebb hírek
            </button>
            <button class="btn btn-ghost">Közelgő események</button>
        </div>

        <div class="hero-metrics">
            <div class="metric"><b>12</b><span>Új bejegyzés</span></div>
            <div class="metric"><b>58</b><span>Kép a galériában</span></div>
            <div class="metric"><b>8</b><span>Aktív program</span></div>
        </div>
    </div>

    <div class="hero-right">
        <div class="search-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="search-icon">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" class="hero-search" placeholder="Keresés..." />
        </div>
        <div class="hero-card">
            <div class="hero-illustration">
                <div class="bubble">📄</div>
                <div class="stack">
                    <span class="pill">📌 Érettségi</span>
                    <span class="pill">🏫 Nyílt nap</span>
                    <span class="pill">🏆 Versenyek</span>
                    <span class="pill">🍽️ Menü</span>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="grid">


    <div>

        <section class="section" id="hirek">
            <div class="section-h">
                <div>
                    <h3>Legújabb hírek</h3>
                    <p>Iskolai aktualitások és események</p>
                </div>
            </div>

            <div class="news">
                <div class="news-grid">

                    @foreach (var cikk in Model)
                    {
                        <article class="card" style="display: flex; flex-direction: column; height: 100%;">

                            @if (!string.IsNullOrEmpty(cikk.CoverImagePath))
                            {
                                <div style="height: 160px; background: url('@cikk.CoverImagePath') center / cover no-repeat; position: relative; border-bottom: 1px solid var(--line);">
                                    <span class="badge-date">
                                        @cikk.PublishedAt.ToString("yyyy.MM.dd")
                                    </span>
                                </div>
                            }
                            else
                            {
                                <div style="padding: 16px 16px 0 16px;">
                                    <span class="badge-date" style="position: relative; left: auto; bottom: auto; display: inline-block;">
                                        @cikk.PublishedAt.ToString("yyyy.MM.dd")
                                    </span>
                                </div>
                            }

                            <div class="card-body">
                                <h4 class="card-title">@cikk.Title</h4>
                                <p class="card-desc">@(cikk.Content.Length > 80 ? cikk.Content.Substring(0, 80) + "..." : cikk.Content)</p>
                            </div>

                            <div class="card-actions" style="margin-top: auto; justify-content: flex-start;">
                                <button class="btn-small">Tovább</button>
                            </div>

                        </article>
                    }

                </div>
            </div>
        </section>


        <section class="section" id="galeria" style="margin-top:12px;">
            <div class="section-h">
                <h3>Galéria</h3>
            </div>

            <div class="gallery">
                <div class="strip">
                    <div class="gitem"><div class="gcap">Farsang →</div></div>
                    <div class="gitem"><div class="gcap">Sportnap →</div></div>
                    <div class="gitem"><div class="gcap">Ballagás →</div></div>
                </div>
            </div>
        </section>


        <section class="section" id="dokumentumok" style="margin-top:12px;">
            <div class="section-h">
                <h3>Dokumentumok</h3>
            </div>
        </section>

    </div>


    <aside class="side">

        <section class="box">
            <div class="box-h">
                <h4>Közelgő események</h4>
            </div>
            <div class="box-body">
                <div class="event">
                    <div class="date-square">MÁ<small>12</small></div>
                    <div>
                        <b>Ballagás</b>
                        <span>2026.06.15</span>
                    </div>
                </div>
            </div>
        </section>

        <section class="box">
            <div class="box-h">
                <h4>Hasznos linkek</h4>
            </div>
            <div class="box-body">
                <button class="linkbtn">Felvételi tájékoztató →</button>
                <button class="linkbtn">Heti menü →</button>
                <button class="linkbtn">Kapcsolat →</button>
            </div>
        </section>

    </aside>
</div>
